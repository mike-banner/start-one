{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
{% form_theme form 'form/fields.html.twig' %}

<div class="form-container">
    {{ form_start(form, {
        attr: {
            enctype: 'multipart/form-data',
            class: 'product-form'
        }
    }) }}

    <div class="form-row">
        <div class="form-group">{{ form_row(form.nameProd) }}</div>
        <div class="form-group">{{ form_row(form.numeroProd) }}</div>
        <div class="form-group">{{ form_row(form.priceProd) }}</div>
    </div>

    <div class="form-row">
        <div class="form-group">{{ form_row(form.imgProd) }}</div>
        <div class="form-group">{{ form_row(form.galleryProd) }}</div>
    </div>

    <div class="form-description-row">
        {{ form_row(form.descripProd) }}
    </div>

    <div class="form-actions">
        <button type="submit" class="btn-submit">Enregistrer</button>
    </div>

    {{ form_end(form) }}
</div>

<h2 class="product-list-title">Liste des produits</h2>

<div class="product-grid">
    {% for product in products %}
        <div class="product-card">
            <h2 class="product-number">{{ product.NumeroProd }}</h2>
            <img src="{{ asset('uploads/' ~ product.imgProd) }}" alt="{{ product.nameProd }}" class="product-image">
            <div class="product-info">
                <h3 class="product-name">{{ product.nameProd }}</h3>
                <p class="product-price">{{ product.priceProd }} €</p>
                <a href="{{ path('app_product_show', { idProd: product.idProd }) }}" class="btn-view">Voir plus</a>
            </div>
        </div>
    {% else %}
        <p class="no-products">Aucun produit</p>
    {% endfor %}
</div>

<div class="pagination">
    <a href="#" class="pagination-prev">«</a>
    <a href="#" class="pagination-page active">1</a>
    <a href="#" class="pagination-page">2</a>
    <a href="#" class="pagination-page">3</a>
    <a href="#" class="pagination-next">»</a>
</div>

{% endblock %}
